<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/imagepause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/imagevolumeup"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/imagepause"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/imagevolumedown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imagepause"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageprevious"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imagepause"
        android:src="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/imagenext"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imagepause"
        android:src="@android:drawable/ic_media_next" />

    <ImageButton
        android:id="@+id/imagemute"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imagevolumedown"
        android:layout_toLeftOf="@+id/imagenext"
        android:src="@android:drawable/ic_lock_silent_mode" />

</RelativeLayout>
